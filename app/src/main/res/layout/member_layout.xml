<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member"
            android:text="Dosen"
            android:layout_marginLeft="40dp"
            android:textColor="@color/color"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/dosen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agung Cahyawan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/dosen"
            android:textSize="18dp"
            android:id="@+id/namadosen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahasiswa"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/namadosen"
            android:textColor="@color/color"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/mahasiswa"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_mahasiswa"
            android:layout_width="match_parent"
            android:layout_height="453dp"
            android:layout_below="@+id/mahasiswa"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp" />

    </RelativeLayout>
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linierbiru"
        android:background="@drawable/gradient">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />
        <TextView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member"
            android:textAllCaps="true"
            android:layout_marginLeft="115dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linierDosen"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linierbiru"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linierbiru"
            android:text="Dosen"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/dosen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:id="@+id/addDosen"
            android:layout_marginTop="16dp"
            android:background="@drawable/adduser"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/garis1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="30dp"
        android:visibility="visible"
        android:layout_below="@+id/linierDosen"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_Dosen"
        android:layout_below="@+id/garis1">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linierMahasiswa"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rec_Dosen"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahasiswa"
            android:id="@+id/mahasiswa"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_below="@+id/rec_Dosen"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="224dp"
            android:id="@+id/addMahasiswa"
            android:layout_marginTop="6dp"
            android:background="@drawable/adduser"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/garis2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="30dp"
        android:visibility="visible"
        android:layout_below="@+id/linierMahasiswa"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_Mahasiswa"
        android:layout_below="@+id/garis2">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>


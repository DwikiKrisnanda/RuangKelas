<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linierbiru"
        android:background="@drawable/gradient"
        android:layout_weight="1">
        <TextView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timeline"
            android:layout_marginLeft="250dp"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/announcelayout"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linierbiru"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linierbiru"
            android:id="@+id/addAnnounce"
            android:text="Add announce"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="1dp"
            android:textSize="18dp"
            android:textColor="@color/color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addAnnounce"
            android:id="@+id/announceLayout"
            android:weightSum="2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/newTitleAnnounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newAnounce"
                android:hint="Title"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_marginRight="20dp" />

            <EditText
                android:id="@+id/newAnounce"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Announce..." />
        </LinearLayout>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/announceLayout"
            android:background="@drawable/button_home"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="Add" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcelayout"
        android:id="@+id/announce"
        android:text="Announce"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/color"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announce"
        android:layout_marginTop="15dp" />
</RelativeLayout>